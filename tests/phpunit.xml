<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="bootstrap.php"
         cacheTokens="true"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         verbose="true">
    <testsuite name="ClimaTempo Tests">
        <directory>.</directory>
    </testsuite>
    <logging>
        <log type="coverage-html" target="./log/report" charsert="utf-8" lowUpperBound="35" highLowerBound="70"/>
        <log type="testdox-html" target="./log/testdox.html" />
    </logging>
</phpunit>